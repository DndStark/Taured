<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context="com.example.miguel.taured.GestionarSecciones">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shopping UP"
            android:paddingTop="60dp"
            android:textSize="10pt"
            android:textAlignment="center"
            android:paddingVertical="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="8pt"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="@string/sec_num"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="8pt"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="@string/web_tit"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="Ropa"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="Ofertas"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="8pt"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="@string/sec_url"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="rop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="ofert"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="8pt"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="@string/web_acc"/>
                <Button
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="Edit"/>
                <Button
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="Edit"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/a3"/>
    </LinearLayout>

    <include
        layout="@layout/app_bar_principal_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_principal_user"
        app:menu="@menu/activity_principal_user_drawer" />

</android.support.v4.widget.DrawerLayout>
