<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/web_mis_pag"
            android:paddingTop="60dp"
            android:textSize="10pt"
            android:textAlignment="center"
            android:paddingVertical="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="8pt"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="@string/web_dom"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="Shipping1.com"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="ShishopUp.com"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="8pt"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="@string/web_tit"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="Shopping"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="ShishipUP"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="8pt"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="@string/web_des"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="Ventas al por menor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:textSize="6pt"
                    android:paddingBottom="15dp"
                    android:text="Por mayor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="8pt"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="@string/web_acc"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_b"
                        android:layout_width="30dp"
                        android:textAlignment="center"
                        android:layout_height="50dp"
                        android:textSize="6pt"
                        android:paddingBottom="15dp"
                        android:text="E"/>
                    <Button
                        android:id="@+id/btn_d"
                        android:layout_width="30dp"
                        android:textAlignment="center"
                        android:layout_height="50dp"
                        android:textSize="6pt"
                        android:paddingBottom="15dp"
                        android:text="V"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="30dp"
                        android:textAlignment="center"
                        android:layout_height="50dp"
                        android:textSize="6pt"
                        android:paddingBottom="15dp"
                        android:text="E"/>
                    <Button
                        android:layout_width="30dp"
                        android:textAlignment="center"
                        android:layout_height="50dp"
                        android:textSize="6pt"
                        android:paddingBottom="15dp"
                        android:text="V"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/a1"/>
    </LinearLayout>


    <include
        layout="@layout/app_bar_principal_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_principal_user"
        app:menu="@menu/activity_principal_user_drawer" />

</android.support.v4.widget.DrawerLayout>
